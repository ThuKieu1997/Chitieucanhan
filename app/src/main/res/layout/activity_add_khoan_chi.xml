<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.khoanchi.AddKhoanChiActivity">

    <TextView
        android:text="Thêm khoản chi"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Nội dung"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/add_khoanchi_edt_noidung"
            android:textSize="16sp"
            android:hint="khoản chi"
            android:lines="3"
            android:inputType="textMultiLine"
            android:layout_marginStart="10dp"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Số tiền"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/add_khoanchi_edt_sotien"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="100000"
            android:layout_marginStart="10dp"
            android:layout_weight="7.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ngày"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_weight="2.9"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/add_khoanchi_edt_ngay"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="dd/MM/yyyy"
            android:layout_weight="5.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/add_khoanchi_btn_selectDate"
            android:src="@drawable/ic_calendar"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/add_khoanchi_add"
        android:text="Thêm khoản chi"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>